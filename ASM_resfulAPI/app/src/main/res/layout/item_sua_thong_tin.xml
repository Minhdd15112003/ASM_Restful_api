<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Sửa thông tin Giới Thiệu"
            android:textColor="@color/lavender"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtDialogEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/editcustom"
            android:layout_marginTop="20dp"
            android:textColor="@color/lavender"
            android:hint="Nhập Email"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/txtDialogUsername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/editcustom"
            android:layout_marginTop="20dp"
            android:textColor="@color/lavender"
            android:hint="Nhập Username"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/txtDialogPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/editcustom"
            android:layout_marginTop="20dp"
            android:textColor="@color/lavender"
            android:hint="Nhập Password"
            android:textSize="22sp" />


        <Button
            android:id="@+id/btnthemA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bkg_button"
            android:text="THÊM"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>


</LinearLayout>