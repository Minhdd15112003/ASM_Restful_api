<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% for( let index = 0; index < productData.length; index++ ) { %>
      <div class="col mb-5">
        <div class="card h-100">
          <!-- Product image-->
          <a href="/getDetailsProduct/<%= productData[index]._id %>">
            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..."  <%= productData[index].imagePath %> />
          </a>
          <!-- Product details-->
          <div class="card-body p-4">
            <div class="text-center"> 
              <!-- Product name-->
              <h5 class="fw-bolder"><%= productData[index].name %></h5>
              <!-- Product reviews-->
              <div class="d-flex justify-content-center small text-warning mb-2">
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
              </div>
              <p><%= productData[index].description %></p>
              <!-- Product price-->
              $<%= productData[index].price %>
            </div>
          </div>
          <!-- Product actions-->
          <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto"
               href="/getFormUpdateProduct/<%= productData[index]._id %>">Add to cart</a></div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>